@inherits LayoutComponentBase
@using AutoDokas.Resources
@using Microsoft.Extensions.Localization

<nav class="navbar navbar-expand-lg navbar-site">
    <div class="container">
        <a class="navbar-brand fw-bold text-white" href="">@Text.NavBrand</a>
        <a href="/contract" class="btn btn-outline-light btn-sm rounded-pill px-3">@Text.NewContract</a>
    </div>
</nav>

<main>
    @Body
</main>

<footer class="footer-site">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-md-6">
                <div class="footer-brand fw-bold mb-1">@Text.NavBrand</div>
                <p class="text-secondary small mb-0">&copy; @DateTime.Now.Year AutoDokas. All rights reserved.</p>
            </div>
            <div class="col-md-6 text-md-end mt-3 mt-md-0">
                <a href="/terms-and-conditions" class="footer-link me-3">@Text.TermsAndConditions</a>
                <a href="/privacy-policy" class="footer-link">@Text.PrivacyPolicy</a>
            </div>
        </div>
    </div>
</footer>