@using AutoDokas.Components.Pages.Contract
@using AutoDokas.Components.Shared
@using AutoDokas.Data.Models
@using Microsoft.AspNetCore.Components.Forms

<div class="section-card @(State == SectionState.Active ? "section-card-active" : "") @(State == SectionState.Completed || State == SectionState.ReadOnly ? "section-card-completed" : "")">
    <div class="section-header @(State == SectionState.Active ? "section-header-active" : "") @(State == SectionState.Completed || State == SectionState.ReadOnly ? "section-header-completed" : "") @(State == SectionState.Disabled ? "section-header-disabled" : "") @(State != SectionState.Disabled ? "collapse-toggle" : "")"
        data-bs-toggle="@(State != SectionState.Disabled ? "collapse" : null)"
        data-bs-target="@(State != SectionState.Disabled ? "#buyerInfoCollapse" : null)"
        role="@(State != SectionState.Disabled ? "button" : null)"
        aria-expanded="@(State == SectionState.Active ? "true" : "false")"
        aria-controls="@(State != SectionState.Disabled ? "buyerInfoCollapse" : null)">
        <span class="d-flex align-items-center">
            <span class="section-number">
                @if (State == SectionState.Completed || State == SectionState.ReadOnly)
                {
                    <i class="bi bi-check-lg"></i>
                }
                else
                {
                    <text>5</text>
                }
            </span>
            <span>@Text.BuyerInformation</span>
        </span>
        @if (State != SectionState.Disabled)
        {
            <span class="d-flex align-items-center gap-2">
                @if (State == SectionState.Completed)
                {
                    <button type="button" class="section-edit-btn" @onclick="EditAsync"
                        @onclick:stopPropagation="true">
                        <i class="bi bi-pencil-square"></i> @Text.Edit
                    </button>
                }
                <i class="bi bi-chevron-down collapse-chevron"></i>
            </span>
        }
    </div>
    @if (State != SectionState.Disabled)
    {
        <div id="buyerInfoCollapse" class="collapse @(State == SectionState.Active ? "show" : "")">
            <EditForm EditContext="_editContext">
                <DataAnnotationsValidator />
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="BuyerName">@Text.Name</label>
                            <InputText @bind-Value="Model.BuyerName" id="BuyerName" disabled="@_formDisabled" />
                            <ValidationMessage For="() => Model.BuyerName" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="BuyerCode">@Text.Code</label>
                            <InputText @bind-Value="Model.BuyerCode" id="BuyerCode" disabled="@_formDisabled" />
                            <ValidationMessage For="() => Model.BuyerCode" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="BuyerPhone">@Text.Phone</label>
                            <InputText @bind-Value="Model.BuyerPhone" id="BuyerPhone" disabled="@_formDisabled" />
                            <ValidationMessage For="() => Model.BuyerPhone" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="BuyerAddress">@Text.Address</label>
                            <InputText @bind-Value="Model.BuyerAddress" id="BuyerAddress" disabled="@_formDisabled" />
                            <ValidationMessage For="() => Model.BuyerAddress" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="BuyerEmailInfo">@Text.Email</label>
                            <InputText @bind-Value="Model.BuyerEmail" type="email" id="BuyerEmailInfo" disabled="@(_formDisabled || ReadOnlyEmail)" />
                            <ValidationMessage For="() => Model.BuyerEmail" />
                        </div>
                    </div>

                    <div class="mt-3">
                        <SignatureField @bind-SignatureData="Model.BuyerSignatureData" Title="@Text.Signature" Disabled="_formDisabled" />
                        <ValidationMessage For="() => Model.BuyerSignatureData" />
                    </div>

                    <div class="mb-3 form-check">
                        <input class="form-check-input" type="checkbox" @bind="_hasConsented" id="BuyerConsent" disabled="@_formDisabled" />
                        <label class="form-check-label" for="BuyerConsent">@((MarkupString)Text.TermsAndConditionsConsent)</label>
                        @if (_consentError != null)
                        {
                            <div class="validation-message">@_consentError</div>
                        }
                    </div>
                </div>
                @if (State != SectionState.ReadOnly)
                {
                    <div class="section-footer">
                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn-section-next" disabled="@(!_hasConsented || _formDisabled)" @onclick="SubmitAsync">
                                @if (_isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm"></span>
                                }
                                @Text.Next <i class="bi bi-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                }
            </EditForm>
        </div>
    }
</div>

@code {
    [Parameter] public ContractViewModel Model { get; set; } = new();
    [Parameter] public SectionState State { get; set; }
    [Parameter] public EventCallback<SectionState> StateChanged { get; set; }
    [Parameter] public EventCallback OnSubmit { get; set; }
    [Parameter] public EventCallback OnEdit { get; set; }
    [Parameter] public bool ReadOnlyEmail { get; set; }

    private EditContext _editContext = null!;
    private ValidationMessageStore _messageStore = null!;
    private bool _isLoading;
    private bool _hasConsented;
    private string? _consentError;

    private static readonly string[] SectionFields =
    [
        nameof(ContractViewModel.BuyerName),
        nameof(ContractViewModel.BuyerCode),
        nameof(ContractViewModel.BuyerPhone),
        nameof(ContractViewModel.BuyerAddress),
        nameof(ContractViewModel.BuyerEmail),
        nameof(ContractViewModel.BuyerSignatureData)
    ];

    private bool _formDisabled => _isLoading || State == SectionState.Completed || State == SectionState.ReadOnly;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(Model);
        _editContext.SetFieldCssClassProvider(new BootstrapValidationFieldClassProvider());
        _messageStore = new ValidationMessageStore(_editContext);
    }

    private async Task SetStateAsync(SectionState newState)
    {
        State = newState;
        await StateChanged.InvokeAsync(newState);
    }

    private async Task SubmitAsync()
    {
        if (!ValidateSection()) return;

        _isLoading = true;

        await SetStateAsync(SectionState.Completed);
        await OnSubmit.InvokeAsync();

        _isLoading = false;
    }

    private async Task EditAsync()
    {
        _editContext = new EditContext(Model);
        _editContext.SetFieldCssClassProvider(new BootstrapValidationFieldClassProvider());
        _messageStore = new ValidationMessageStore(_editContext);
        _consentError = null;
        await SetStateAsync(SectionState.Active);
        await OnEdit.InvokeAsync();
    }

    private bool ValidateSection()
    {
        _messageStore.Clear();
        _consentError = null;

        if (Model.BuyerSignatureData == null || Model.BuyerSignatureData.Length == 0)
            _messageStore.Add(_editContext.Field(nameof(Model.BuyerSignatureData)), Text.SignatureRequired);
        if (!_hasConsented)
            _consentError = Text.ConsentRequired;

        _editContext.NotifyValidationStateChanged();
        _editContext.Validate();

        var fieldsValid = SectionFields.All(f =>
            !_editContext.GetValidationMessages(_editContext.Field(f)).Any());

        return fieldsValid && _hasConsented;
    }
}
