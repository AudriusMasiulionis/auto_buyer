@using AutoDokas.Components.Pages.Contract
@using AutoDokas.Components.Shared
@using AutoDokas.Data.Models
@using AutoDokas.Extensions
@using Microsoft.AspNetCore.Components.Forms

<div class="section-card @(State == SectionState.Active ? "section-card-active" : "") @(State == SectionState.Completed || State == SectionState.ReadOnly ? "section-card-completed" : "")">
    <div class="section-header @(State == SectionState.Active ? "section-header-active" : "") @(State == SectionState.Completed || State == SectionState.ReadOnly ? "section-header-completed" : "") @(State == SectionState.Disabled ? "section-header-disabled" : "") @(State != SectionState.Disabled ? "collapse-toggle" : "")"
        data-bs-toggle="@(State != SectionState.Disabled ? "collapse" : null)"
        data-bs-target="@(State != SectionState.Disabled ? "#vehicleCollapse" : null)"
        role="@(State != SectionState.Disabled ? "button" : null)"
        aria-expanded="@(State == SectionState.Active ? "true" : "false")"
        aria-controls="@(State != SectionState.Disabled ? "vehicleCollapse" : null)">
        <span class="d-flex align-items-center">
            <span class="section-number">
                @if (State == SectionState.Completed || State == SectionState.ReadOnly)
                {
                    <i class="bi bi-check-lg"></i>
                }
                else
                {
                    <text>1</text>
                }
            </span>
            <span>@Text.VehicleInformation</span>
        </span>
        @if (State != SectionState.Disabled)
        {
            <span class="d-flex align-items-center gap-2">
                @if (State == SectionState.Completed)
                {
                    <button type="button" class="section-edit-btn" @onclick="EditAsync"
                        @onclick:stopPropagation="true">
                        <i class="bi bi-pencil-square"></i> @Text.Edit
                    </button>
                }
                <i class="bi bi-chevron-down collapse-chevron"></i>
            </span>
        }
    </div>
    @if (State != SectionState.Disabled)
    {
        <div id="vehicleCollapse" class="collapse @(State == SectionState.Active ? "show" : "")">
            <EditForm EditContext="_editContext">
                <DataAnnotationsValidator />
                <div class="section-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="VehicleSdk">@Text.Sdk</label>
                            <InputText @bind-Value="Model.VehicleSdk" id="VehicleSdk" disabled="@_formDisabled" />
                            <ValidationMessage For="() => Model.VehicleSdk" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="VehicleMake">@Text.Make</label>
                            <InputText @bind-Value="Model.VehicleMake" id="VehicleMake" disabled="@_formDisabled" />
                            <ValidationMessage For="() => Model.VehicleMake" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="VehicleRegistrationNumber">@Text.RegistrationNumber</label>
                            <InputText @bind-Value="Model.VehicleRegistrationNumber" id="VehicleRegistrationNumber" disabled="@_formDisabled" />
                            <ValidationMessage For="() => Model.VehicleRegistrationNumber" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="VehicleRegistrationCertificate">@Text.RegistrationCertificate</label>
                            <InputText @bind-Value="Model.VehicleRegistrationCertificate" id="VehicleRegistrationCertificate" disabled="@_formDisabled" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="VehicleMillage">@Text.Millage</label>
                            <InputNumber @bind-Value="Model.VehicleMillage" id="VehicleMillage" disabled="@_formDisabled" />
                            <ValidationMessage For="() => Model.VehicleMillage" />
                        </div>
                        <div class="col-md-6 mb-3">
                            <label class="form-label" for="VehicleIdentificationNumber">@Text.IdentificationNumber</label>
                            <InputText @bind-Value="Model.VehicleIdentificationNumber" id="VehicleIdentificationNumber" disabled="@_formDisabled" />
                            <ValidationMessage For="() => Model.VehicleIdentificationNumber" />
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>@Text.IsInspected</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="VehicleIsInspected" id="VehicleIsInspectedTrue"
                                       checked="@Model.VehicleIsInspected" @onchange="() => Model.VehicleIsInspected = true" disabled="@_formDisabled" />
                                <label class="form-check-label" for="VehicleIsInspectedTrue">@Text.Valid</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="VehicleIsInspected" id="VehicleIsInspectedFalse"
                                       checked="@(!Model.VehicleIsInspected)" @onchange="() => Model.VehicleIsInspected = false" disabled="@_formDisabled" />
                                <label class="form-check-label" for="VehicleIsInspectedFalse">@Text.Invalid</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>@Text.DamageIncidentsKnown</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="VehicleHasBeenDamaged" id="VehicleHasBeenDamagedTrue"
                                       checked="@Model.VehicleHasBeenDamaged" @onchange="() => Model.VehicleHasBeenDamaged = true" disabled="@_formDisabled" />
                                <label class="form-check-label" for="VehicleHasBeenDamagedTrue">@Text.Yes</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="VehicleHasBeenDamaged" id="VehicleHasBeenDamagedFalse"
                                       checked="@(!Model.VehicleHasBeenDamaged)" @onchange="() => Model.VehicleHasBeenDamaged = false" disabled="@_formDisabled" />
                                <label class="form-check-label" for="VehicleHasBeenDamagedFalse">@Text.No</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>@Text.DamagedDuringOwnership</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="VehicleDamagedDuringOwnership" id="VehicleDamagedDuringOwnershipTrue"
                                       checked="@Model.VehicleDamagedDuringOwnership" @onchange="() => Model.VehicleDamagedDuringOwnership = true" disabled="@_formDisabled" />
                                <label class="form-check-label" for="VehicleDamagedDuringOwnershipTrue">@Text.Yes</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="VehicleDamagedDuringOwnership" id="VehicleDamagedDuringOwnershipFalse"
                                       checked="@(!Model.VehicleDamagedDuringOwnership)" @onchange="() => Model.VehicleDamagedDuringOwnership = false" disabled="@_formDisabled" />
                                <label class="form-check-label" for="VehicleDamagedDuringOwnershipFalse">@Text.No</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>@Text.DamageIncidentsKnown</label>
                        <div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="VehicleDamageIncidentsKnown" id="VehicleDamageIncidentsKnownTrue"
                                       checked="@Model.VehicleDamageIncidentsKnown" @onchange="() => Model.VehicleDamageIncidentsKnown = true" disabled="@_formDisabled" />
                                <label class="form-check-label" for="VehicleDamageIncidentsKnownTrue">@Text.Yes</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="VehicleDamageIncidentsKnown" id="VehicleDamageIncidentsKnownFalse"
                                       checked="@(!Model.VehicleDamageIncidentsKnown)" @onchange="() => Model.VehicleDamageIncidentsKnown = false" disabled="@_formDisabled" />
                                <label class="form-check-label" for="VehicleDamageIncidentsKnownFalse">@Text.No</label>
                            </div>
                        </div>
                    </div>

                    <div class="mb-3">
                        <label>@Text.Defects</label>
                        @foreach (var defect in DefectValues)
                        {
                            <div class="form-check">
                                <input class="form-check-input" type="checkbox" id="edit_@defect" value="@defect"
                                       @onchange="(e => ToggleDefectSelection(defect, e))"
                                       checked="@Model.VehicleDefects.Contains(defect)" disabled="@_formDisabled" />
                                <label class="form-check-label" for="edit_@defect">@defect.GetDisplayName()</label>
                            </div>
                        }
                    </div>

                    <div class="mb-3">
                        <label class="form-label" for="VehicleAdditionalInformation">@Text.VehicleAdditionalInfo</label>
                        <InputTextArea @bind-Value="Model.VehicleAdditionalInformation" id="VehicleAdditionalInformation" rows="3" disabled="@_formDisabled" />
                    </div>
                </div>
                @if (State != SectionState.ReadOnly)
                {
                    <div class="section-footer">
                        <div class="d-flex justify-content-end">
                            <button type="button" class="btn-section-next" disabled="@_formDisabled" @onclick="SubmitAsync">
                                @if (_isLoading)
                                {
                                    <span class="spinner-border spinner-border-sm"></span>
                                }
                                @Text.Next <i class="bi bi-arrow-right"></i>
                            </button>
                        </div>
                    </div>
                }
            </EditForm>
        </div>
    }
</div>

@code {
    [Parameter] public ContractViewModel Model { get; set; } = new();
    [Parameter] public SectionState State { get; set; }
    [Parameter] public EventCallback<SectionState> StateChanged { get; set; }
    [Parameter] public EventCallback OnSubmit { get; set; }
    [Parameter] public EventCallback OnEdit { get; set; }

    private EditContext _editContext = null!;
    private bool _isLoading;
    private readonly VehicleContract.Vehicle.Defect[] DefectValues = Enum.GetValues<VehicleContract.Vehicle.Defect>();

    private static readonly string[] SectionFields =
    [
        nameof(ContractViewModel.VehicleSdk),
        nameof(ContractViewModel.VehicleMake),
        nameof(ContractViewModel.VehicleRegistrationNumber),
        nameof(ContractViewModel.VehicleMillage),
        nameof(ContractViewModel.VehicleIdentificationNumber)
    ];

    private bool _formDisabled => _isLoading || State == SectionState.Completed || State == SectionState.ReadOnly;

    protected override void OnInitialized()
    {
        _editContext = new EditContext(Model);
        _editContext.SetFieldCssClassProvider(new BootstrapValidationFieldClassProvider());
    }

    private async Task SetStateAsync(SectionState newState)
    {
        State = newState;
        await StateChanged.InvokeAsync(newState);
    }

    private void ToggleDefectSelection(VehicleContract.Vehicle.Defect defect, ChangeEventArgs e)
    {
        var isChecked = (bool)(e.Value ?? false);
        if (isChecked && !Model.VehicleDefects.Contains(defect))
        {
            Model.VehicleDefects.Add(defect);
        }
        else if (!isChecked && Model.VehicleDefects.Contains(defect))
        {
            Model.VehicleDefects.Remove(defect);
        }
    }

    private async Task SubmitAsync()
    {
        if (!ValidateSection()) return;

        _isLoading = true;

        await SetStateAsync(SectionState.Completed);
        await OnSubmit.InvokeAsync();

        _isLoading = false;
    }

    private async Task EditAsync()
    {
        _editContext = new EditContext(Model);
        _editContext.SetFieldCssClassProvider(new BootstrapValidationFieldClassProvider());
        await SetStateAsync(SectionState.Active);
        await OnEdit.InvokeAsync();
    }

    private bool ValidateSection()
    {
        _editContext.Validate();
        return SectionFields.All(f =>
            !_editContext.GetValidationMessages(_editContext.Field(f)).Any());
    }
}
