@page "/"
@using AutoDokas.Resources

<PageTitle>@Text.HomeTitle</PageTitle>

<!-- Hero Section -->
<div class="container-fluid bg-primary text-white text-center py-5">
    <div class="row">
        <div class="col-lg-6 col-md-6">
            <h1 class="display-4 fw-bold">@Text.HeroTitle</h1>
            <h2 class="lead mb-4">@Text.HeroSubtitle</h2>
        </div>
        <div class="col-lg-6 col-md-6">
            <img src="https://placeholdit.com/600x400/dddddd/999999" alt="Hero Image" class="img-fluid my-4 rounded-5" />
        </div>
    </div>
    <a href="/contract" class="btn btn-light btn-lg mt-3">@Text.SellNowButton</a>
</div>

<!-- About Section -->
<div class="container py-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-12">
            <h2 class="fw-bold">@Text.AboutSectionTitle</h2>
            <p class="lead">@Text.AboutSectionText</p>
            <div class="row justify-content-center my-4">
                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                    <img src="img/phone.jpg" alt="Hero Image" class="img-fluid rounded-5" style="max-width: 100%; height: auto;" />
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                    <img src="img/phone.jpg" alt="Hero Image" class="img-fluid rounded-5" style="max-width: 100%; height: auto;" />
                </div>
                <div class="col-lg-4 col-md-6 col-sm-12 mb-3">
                    <img src="img/phone.jpg" alt="Hero Image" class="img-fluid rounded-5" style="max-width: 100%; height: auto;" />
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container-fluid bg-light py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-4">@Text.FeaturesTitle</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <div class="icon mb-3">
                            <i class="bi bi-lightning-fill text-primary fs-1"></i>
                        </div>
                        <h5 class="card-title fw-bold">@Text.Feature1Title</h5>
                        <p class="card-text text-muted">
                            @Text.Feature1Text
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <div class="icon mb-3">
                            <i class="bi bi-lock-fill text-primary fs-1"></i>
                        </div>
                        <h5 class="card-title fw-bold">@Text.Feature2Title</h5>
                        <p class="card-text text-muted">
                            @Text.Feature2Text
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <div class="icon mb-3">
                            <i class="bi bi-gear-fill text-primary fs-1"></i>
                        </div>
                        <h5 class="card-title fw-bold">@Text.Feature3Title</h5>
                        <p class="card-text text-muted">
                            @Text.Feature3Text
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>