@page "/"
@using AutoDokas.Resources

<PageTitle>@Text.HomeTitle</PageTitle>

<!-- Hero Section -->
<section class="hero-section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 hero-content mb-5 mb-lg-0">
                <div class="hero-badge">@Text.NavBrand</div>
                <h1 class="hero-title">@Text.HeroTitle</h1>
                <p class="hero-subtitle">@Text.HeroSubtitle</p>
                <a href="/contract" class="btn btn-cta btn-lg">
                    @Text.SellNowButton
                    <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
            <div class="col-lg-6 d-none d-lg-flex justify-content-center">
                <div class="hero-image-wrapper">
                    <img src="img/car.jpg" alt="" class="hero-image" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="steps-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">@Text.HowItWorksTitle</h2>
            <p class="section-subtitle">@Text.HowItWorksSubtitle</p>
        </div>
        <div class="row g-4 justify-content-center">
            <div class="col-md-4">
                <div class="step-card">
                    <div class="step-number-badge">1</div>
                    <div class="step-icon-wrapper">
                        <i class="bi bi-pencil-square"></i>
                    </div>
                    <h5>@Text.Step1Title</h5>
                    <p>@Text.Step1Text</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="step-card">
                    <div class="step-number-badge">2</div>
                    <div class="step-icon-wrapper">
                        <i class="bi bi-vector-pen"></i>
                    </div>
                    <h5>@Text.Step2Title</h5>
                    <p>@Text.Step2Text</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="step-card">
                    <div class="step-number-badge">3</div>
                    <div class="step-icon-wrapper">
                        <i class="bi bi-file-earmark-pdf"></i>
                    </div>
                    <h5>@Text.Step3Title</h5>
                    <p>@Text.Step3Text</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="features-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-title">@Text.FeaturesTitle</h2>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon-wrapper">
                        <i class="bi bi-lightning-charge-fill"></i>
                    </div>
                    <h5>@Text.Feature1Title</h5>
                    <p>@Text.Feature1Text</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon-wrapper">
                        <i class="bi bi-shield-lock-fill"></i>
                    </div>
                    <h5>@Text.Feature2Title</h5>
                    <p>@Text.Feature2Text</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feature-card">
                    <div class="feature-icon-wrapper">
                        <i class="bi bi-phone-fill"></i>
                    </div>
                    <h5>@Text.Feature3Title</h5>
                    <p>@Text.Feature3Text</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="cta-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="cta-title">@Text.CtaTitle</h2>
                <p class="cta-subtitle">@Text.CtaSubtitle</p>
                <a href="/contract" class="btn btn-cta-light btn-lg">
                    @Text.StartNow
                    <i class="bi bi-arrow-right ms-2"></i>
                </a>
            </div>
        </div>
    </div>
</section>