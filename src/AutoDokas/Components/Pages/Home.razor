@page "/"
@using AutoDokas.Resources

<PageTitle>@Text.HomeTitle</PageTitle>

<!-- Hero Section -->
<section class="hero">
    <div class="hero-bg">
        <div class="hero-orb hero-orb--1"></div>
        <div class="hero-orb hero-orb--2"></div>
        <div class="hero-grid"></div>
    </div>
    <div class="container">
        <div class="row align-items-center min-vh-hero">
            <div class="col-lg-7 hero-col">
                <p class="hero-eyebrow">AutoDokas.lt</p>
                <h1 class="hero-heading">@Text.HeroTitle</h1>
                <p class="hero-desc">@Text.HeroSubtitle</p>
                <a href="/contract" class="btn-hero">
                    @Text.SellNowButton
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
            <div class="col-lg-5 d-none d-lg-flex justify-content-center">
                <div class="hero-visual">
                    <img src="img/car.png" alt="" class="hero-car" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- How It Works Section -->
<section class="how-section">
    <div class="container">
        <div class="text-center mb-5">
            <p class="section-label">@Text.HowItWorksTitle</p>
            <h2 class="section-heading">@Text.HowItWorksSubtitle</h2>
        </div>
        <div class="steps-row">
            <div class="steps-line"></div>
            <div class="row g-4 justify-content-center">
                <div class="col-md-4">
                    <div class="step">
                        <div class="step-num">01</div>
                        <div class="step-icon">
                            <i class="bi bi-pencil-square"></i>
                        </div>
                        <h5 class="step-title">@Text.Step1Title</h5>
                        <p class="step-text">@Text.Step1Text</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="step">
                        <div class="step-num">02</div>
                        <div class="step-icon">
                            <i class="bi bi-vector-pen"></i>
                        </div>
                        <h5 class="step-title">@Text.Step2Title</h5>
                        <p class="step-text">@Text.Step2Text</p>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="step">
                        <div class="step-num">03</div>
                        <div class="step-icon">
                            <i class="bi bi-file-earmark-pdf"></i>
                        </div>
                        <h5 class="step-title">@Text.Step3Title</h5>
                        <p class="step-text">@Text.Step3Text</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="feat-section">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="section-heading">@Text.FeaturesTitle</h2>
        </div>
        <div class="row g-4">
            <div class="col-md-4">
                <div class="feat">
                    <div class="feat-icon">
                        <i class="bi bi-lightning-charge-fill"></i>
                    </div>
                    <h5 class="feat-title">@Text.Feature1Title</h5>
                    <p class="feat-text">@Text.Feature1Text</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feat">
                    <div class="feat-icon">
                        <i class="bi bi-shield-lock-fill"></i>
                    </div>
                    <h5 class="feat-title">@Text.Feature2Title</h5>
                    <p class="feat-text">@Text.Feature2Text</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="feat">
                    <div class="feat-icon">
                        <i class="bi bi-phone-fill"></i>
                    </div>
                    <h5 class="feat-title">@Text.Feature3Title</h5>
                    <p class="feat-text">@Text.Feature3Text</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="bottom-cta">
    <div class="bottom-cta-orb"></div>
    <div class="container position-relative">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="bottom-cta-heading">@Text.CtaTitle</h2>
                <p class="bottom-cta-desc">@Text.CtaSubtitle</p>
                <a href="/contract" class="btn-hero btn-hero--light">
                    @Text.StartNow
                    <i class="bi bi-arrow-right"></i>
                </a>
            </div>
        </div>
    </div>
</section>
