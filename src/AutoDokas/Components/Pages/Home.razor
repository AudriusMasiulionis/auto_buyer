@page "/"
@using AutoDokas.Resources
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Text> Localizer

<PageTitle>@Localizer["HomeTitle"]</PageTitle>

<!-- Hero Section -->
<div class="container-fluid bg-primary text-white text-center py-5">
    <h1 class="display-4 fw-bold">@Localizer["HeroTitle"]</h1>
    <p class="lead">@Localizer["HeroSubtitle"]</p>
    <a href="/seller" class="btn btn-light btn-lg mt-3">@Localizer["SellNowButton"]</a>
</div>

<!-- About Section -->
<div class="container py-5">
    <div class="row justify-content-center text-center">
        <div class="col-md-8">
            <h2 class="fw-bold">@Localizer["AboutSectionTitle"]</h2>
            <p class="text-muted">
                @Localizer["AboutSectionText"]
            </p>
        </div>
    </div>
</div>

<!-- Features Section -->
<div class="container-fluid bg-light py-5">
    <div class="container">
        <h2 class="text-center fw-bold mb-4">@Localizer["FeaturesTitle"]</h2>
        <div class="row text-center">
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <div class="icon mb-3">
                            <i class="bi bi-lightning-fill text-primary fs-1"></i>
                        </div>
                        <h5 class="card-title fw-bold">@Localizer["Feature1Title"]</h5>
                        <p class="card-text text-muted">
                            @Localizer["Feature1Text"]
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <div class="icon mb-3">
                            <i class="bi bi-lock-fill text-primary fs-1"></i>
                        </div>
                        <h5 class="card-title fw-bold">@Localizer["Feature2Title"]</h5>
                        <p class="card-text text-muted">
                            @Localizer["Feature2Text"]
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="card shadow border-0">
                    <div class="card-body">
                        <div class="icon mb-3">
                            <i class="bi bi-gear-fill text-primary fs-1"></i>
                        </div>
                        <h5 class="card-title fw-bold">@Localizer["Feature3Title"]</h5>
                        <p class="card-text text-muted">
                            @Localizer["Feature3Text"]
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

