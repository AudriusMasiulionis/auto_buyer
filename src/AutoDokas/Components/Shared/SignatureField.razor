@using Microsoft.AspNetCore.Components.Web
@using Microsoft.JSInterop
@rendermode InteractiveServer

<div class="mb-3">
    <label class="form-label">@Title</label>

    @if (SignatureData != null && (Disabled || !_isEditing))
    {
        <div class="signature-box border rounded bg-light position-relative">
            <div class="d-flex align-items-center justify-content-center" style="height: 150px;">
                <img src="data:image/png;base64,@Convert.ToBase64String(SignatureData)" alt="Signature" style="max-height: 140px;" />
            </div>
            @if (!Disabled)
            {
                <button type="button" class="btn btn-outline-secondary btn-sm position-absolute top-0 end-0 m-2" @onclick="StartEditing">
                    <i class="bi bi-pencil"></i>
                </button>
            }
        </div>
    }
    else if (Disabled)
    {
        <div class="signature-box border rounded bg-light d-flex align-items-center justify-content-center"
             style="height: 150px;">
            <div class="text-center text-muted">
                <i class="bi bi-pen fs-2"></i>
            </div>
        </div>
    }
    else if (!_isSigning)
    {
        <div class="signature-box border border-dashed rounded bg-white d-flex align-items-center justify-content-center"
             style="height: 150px; cursor: pointer;" @onclick="StartSigning">
            <div class="text-center text-muted">
                <i class="bi bi-pen fs-2"></i>
                <div class="mt-1 small">@Text.Sign</div>
            </div>
        </div>
    }
    else
    {
        <div class="signature-box position-relative">
            <canvas @ref="canvasElement"
                    class="border rounded bg-white w-100"
                    style="border-style: dashed !important; touch-action: none; height: 150px; cursor: crosshair;"></canvas>
            <div class="signature-actions d-flex gap-2 position-absolute bottom-0 end-0 m-2">
                <button type="button" class="btn btn-light signature-action-btn shadow-sm" @onclick="ClearCanvas" title="@Text.Clear">
                    <i class="bi bi-eraser"></i>
                </button>
                <button type="button" class="btn btn-primary signature-action-btn shadow-sm" @onclick="SaveSignature" title="@Text.Confirm">
                    <i class="bi bi-check-lg"></i>
                </button>
            </div>
        </div>
    }
</div>
