@inherits ComponentBase
@using AutoDokas.Resources

<div class="container py-5">
    <div class="row">
        <div class="col-12">
            <div class="stepper-container position-relative">
                <div class="stepper-line"></div>
                @for (var i = 1; i <= Steps; i++)
                {
                    <div class="stepper-circle @(i == Steps ? "last-circle" : i == 1 ? "first-circle" : "")"
                        style="@(i == Steps ? "right: 0" : i == 1 ? "left: 0" : $"left: {(i - 1) * 100 / (Steps - 1)}%")">
                        <div
                            class="circle @(i <= CurrentStep ? "bg-primary text-white" : "bg-light text-primary border border-primary")">
                            @i
                        </div>
                        <small class="d-block mt-2">@GetStepLabel(i)</small>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .stepper-container {
        height: 80px;
        width: 100%;
        padding: 0 20px;
    }

    .stepper-line {
        position: absolute;
        top: 20px;
        left: 40px;
        right: 40px;
        height: 2px;
        background-color: #dee2e6;
        z-index: 0;
    }

    .stepper-circle {
        position: absolute;
        top: 0;
        transform: translateX(-50%);
        z-index: 1;
        text-align: center;
    }

    .last-circle {
        transform: translateX(0);
    }

    .first-circle {
        transform: translateX(0);
    }

    .circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
        margin: 0 auto;
    }
</style>

@code {
    [Parameter] public int Steps { get; set; } = 3;
    [Parameter] public int CurrentStep { get; set; } = 1;
    [Parameter] public string[] StepLabels { get; set; } = [];

    private string GetStepLabel(int stepNumber)
    {
        if (StepLabels != null && StepLabels.Length >= stepNumber && stepNumber > 0)
        {
            return StepLabels[stepNumber - 1];
        }
        return $"{Text.StepText} {stepNumber}";
    }
}