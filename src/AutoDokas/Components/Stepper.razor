@inherits ComponentBase

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <div class="d-flex justify-content-between align-items-center position-relative">
                @for (var i = 1; i <= Steps; i++)
                {
                    <div class="text-center">
                        <div
                            class="circle @(i <= CurrentStep ? "bg-primary text-white" : "bg-light text-primary border border-primary")">
                            @i
                        </div>
                        <small class="d-block mt-2">Step @i</small>
                    </div>
                    @if (i >= Steps)
                    {
                        continue;
                    }

                    <div class="line"></div>
                }
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Steps { get; set; } = 3;
    [Parameter] public int CurrentStep { get; set; } = 1;
}